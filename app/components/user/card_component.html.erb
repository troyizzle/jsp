<div class="flex flex-col space-y-1 p-2 bg-sky-200 min-w-[150px]">
  <%= link_to user.username, user %>
  <% if user.avatar_url %>
    <%= image_tag user.avatar_url, class: "w-20 h-20" %>
  <% end %>

  <div class="text-xs">
    <p>Posts: <%= user.posts_count %></p>
    <p>Joined: <%= user.created_at.to_date %></p>
    <p>Gold: <%= user.gold %></p>
  </div>
</div>
