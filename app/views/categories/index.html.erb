<div class="flex flex-col space-y-3">
  <% @categories.each do |category| %>
    <%= render_accordion class_name: "bg-secondary" do %>
      <%= accordion_title do %>
        <%= category.title %>
      <% end %>

      <%= accordion_description do %>
        <% category.top_level_forums.each do |forum| %>
          <div class="flex flex-row items-center">
            <%= link_to forum.title, forum %>
            <div class="bg-red-300">
              <% forum.children.each do |child| %>
                <%= link_to child.title, child %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
