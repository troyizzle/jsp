<div class="w-[480px] mx-auto">
  <div class="bg-blue-400 w-full">
    <div class="p-2">
      <%= render_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
        <% if form.object.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% form.object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form.label :username %>
        <%= form.text_field :username %>

        <%= form.label :password %>
        <%= form.password_field :password %>

        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation %>

        <%= form.label :email %>
        <%= form.email_field :email %>

        <%= form.submit "Create My Account" %>
      <% end %>
    </div>
  </div>
</div>
